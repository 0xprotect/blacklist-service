{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "types" : [
      "mocha"
    ]
  },
  "compileOnSave": true,
  "include": ["./src/**/*.ts", "./test/**/*.ts"]
}